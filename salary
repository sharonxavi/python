salary = float(input("Enter the salary of the employee: "))
grade = input("Enter the grade of the employee (A/B): ")
if salary < 10000:
    bonus_percent = 7
elif grade == "A":
    bonus_percent = 5
elif grade == "B":
    bonus_percent = 10
else:
    bonus_percent = 0
bonus = salary * (bonus_percent / 100)
new_salary = salary + bonus
print("Bonus percent: {}%".format(bonus_percent))
print("Bonus amount: ${:.2f}".format(bonus))
print("New salary: ${:.2f}".format(new_salary))
